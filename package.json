{
  "name": "dogma",
  "displayName": "Dogma",
  "description": "Rich support for Dogma applications",
  "version": "0.1.0",
  "license": "MIT",
  "contributes": {
    "commands": [
      {
        "command": "dogma.restartLanguageServer",
        "title": "Dogma: Restart Language Server"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "artifacts/dist/extension.js",
  "engines": {
    "vscode": "^1.77.0"
  },
  "scripts": {
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@types/vscode": "^1.77.0",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^4.0.0",
    "typescript": "^5.0.2"
  }
}
